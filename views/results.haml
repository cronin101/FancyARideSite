%script{src: 'https://cdn.rawgit.com/nnnick/Chart.js/master/Chart.min.js'}
%div.jumbotron
  %div.container
    %h4
      Optumm
    Findings from Customers

%div.container
  %div.row
    %div.col-md-12
      %canvas{:id => "radar_chart", :width => "400", :height => "400"}

:javascript
    $(document).ready( function() {

      var ctx_radar = $("#radar_chart").get(0).getContext("2d");
      var myNewChartRadar = new Chart(ctx_radar);
      var data_radar = {
            labels : ["Route Map","Parking Map","Bike Shop Map","Air Quality Map","Accident Map"],
            datasets : [
              {
                fillColor : "rgba(220,220,220,0.5)",
                strokeColor : "rgba(220,220,220,1)",
                pointColor : "rgba(220,220,220,1)",
                pointStrokeColor : "#fff",
                data : #{@female_rankings}
              },
              {
                fillColor : "rgba(151,187,205,0.5)",
                strokeColor : "rgba(151,187,205,1)",
                pointColor : "rgba(151,187,205,1)",
                pointStrokeColor : "#fff",
                data : #{@male_rankings}
              }
            ]
          }

      new Chart(ctx_radar).Radar(data_radar);


    } );
