%div.jumbotron
  %div.container
    %h4
      Optumm
    Findings from Customers

%div.container
  %div.row
    %div.col-md-12
      %canvas{:id => "line_chart", :width => "400", :height => "400"}
  %div.row
    %div.col-md-12
      %canvas{:id => "bar_chart", :width => "400", :height => "400"}
  %div.row
    %div.col-md-12
      %canvas{:id => "radar_chart", :width => "400", :height => "400"}

:javascript
    $(document).ready( function() {
      var ctx_line = $("#line_chart").get(0).getContext("2d");
      var myNewChartLine = new Chart(ctx_line);
      var data_line = {
            labels : ["January","February","March","April","May","June","July"],
            datasets : [
              {
                fillColor : "rgba(220,220,220,0.5)",
