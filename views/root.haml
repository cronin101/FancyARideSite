  %div.row
    %div.col-md-6.col-sm-offset-3
      %h1
        Optumm

%div.container
  %div.row
    %div.col-md-6
      %iframe{:src=>"https://www.mapbox.com/bites/00011/", :frameborder=>"no", :width=>"100%", :height=>"300"}
    %div.col-md-6
      %iframe{:src=>"//www.youtube.com/embed/mrNSAqiO0SY?autoplay=1&controls=0&showinfo=0&rel=0&hd=1", width: '100%', height: '300', frameborder: "0"}
